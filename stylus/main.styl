@require "partials/_global.styl"

/* ==========================================================================
	Child Main Stylesheet
   ========================================================================== */

html
	font-family Roboto, sans-serif
	font-weight 400
	letter-spacing 0.1em


body
	@extends html


h1
h2
h3
h4
h5
h6
strong
	font-weight 700


a
	&:link
		color $gray
	&:visited
		color $darkgray


#site-description
	width 100%
	font-size 0.9em
	text-align right
	text-transform lowercase


#site-navigation-sidebar-container
#site-navigation-sb-container
	.projects-sub-menu-container
		display none

		.projects-sub-menu
			font-size 0.9em
			margin 0.5em 0.5em 0.5em 0
			padding-right 0.25em
			border-right 1px solid $gray

			li
				margin 0.2em auto

				a
					color white

					&:hover
					&:active
						color (@color)


#site-navigation-sidebar-container
	#site-navigation-sidebar
		.menu-item
			font-size 0.9em

			a
				-webkit-transition color 0.25s
				transition color 0.25s
				text-decoration none

				&:link
				&:visited
					color inherit

				&:hover
				&:active
				&:focus
					color $gray


	.projects-sub-menu-container
		background black
		position relative

		.projects-sub-menu
			li
				a
					font-weight normal


#hamburger
	font-size 0.98rem
	top 0

	span
		background-color white

		&::before
		&::after
			background-color (@background-color)


/* ==========================================================================
	Current
   ========================================================================== */

#current-projects
	width 100%
	@extends .flexbox
	@extends .clearfix

	.current-item
		width 48%
		height auto
		max-width 383px
		max-height 383px
		position relative
		margin 2% auto
		transition all 0.5s
		overflow hidden
		@extends .flexitem

		&:nth-of-type(odd)
			float left

		&:nth-of-type(even)
			float right

		.current-item-link
			width 100%
			height 100%
			position absolute
			top 0
			left 0
			z-index 999
			background transparent
			display block

		.current-item-thumb
			width 100%
			height 100%

			img
				width (@width)
				display block
				border-radius 2px

		.current-item-overlay
			width 100%
			height 100%
			position absolute
			top 0
			left 0
			opacity 0

			.overlay
				width (@width)
				height (@height)
				position (@position)
				top (@top)
				left (@left)
				background rgba(0,0,0,0.8)

			.current-item-content
				width 100%
				font-size 0.9em
				text-align center
				position absolute
				top 50%
				transform translateY(-50%)
				word-wrap break-word


/* ==========================================================================
	Bio
   ========================================================================== */

.entry-content
	.bio-img
		margin-top 0


/* ==========================================================================
	Resume (TablePress)
   ========================================================================== */

#post-10 // Resume
	font-size 0.8em

	.tablepress-table-name
		font-size 1rem
		color $gray
		margin 0.25em auto

	.tablepress
		margin-bottom 0.5em

		td
		th
			padding 0.5em 0

		tr
			td
				border none

				&.column-1
					width 40%
					padding-right 1%
					text-indent -1em
					padding-left 1em

				&.column-2
					width 30%
					padding-right 1%

				&.column-3
					width 28%


/* ==========================================================================
	Contact
   ========================================================================== */

#post-22
	.wp-image-476
		margin 0


/* ==========================================================================
	Extras
   ========================================================================== */

.ngg-galleria-offscreen-seo-wrapper
	display none


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#primary
	#site-title-container
	#site-info
		width $prmW
		float right

	#secondary
		width $secW

	#colophon
		height $footerH